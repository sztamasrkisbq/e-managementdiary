<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meeting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_meetingTargy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Meeting neve(tárgy)..."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_addEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail címek" />

        <EditText
            android:id="@+id/et_emailCimzett"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="E-mail címek..."
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/et_mailIUzenet"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="E-mail üzenet..."
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_addContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefonszámok" />

        <EditText
            android:id="@+id/et_smsCimzett"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="SMS címzettek..."
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/et_smsUzenet"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="SMS üzenet..."
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Küldés dátuma:"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Választ" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_createMeeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mehet" />

    </LinearLayout>
</ScrollView>